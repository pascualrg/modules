<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="juego.players_list">
      <field name="name">Players</field>
      <field name="model">juego.player</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="juego.bunkers_list">
      <field name="name">Bunkers</field>
      <field name="model">juego.bunker</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="juego.npcs_list">
      <field name="name">NPCs</field>
      <field name="model">juego.npc</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->
