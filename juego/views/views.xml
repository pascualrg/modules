<odoo>
  <data>
    <!-- explicit list view definition -->

    <!--Jugadores-->
    <record model="ir.ui.view" id="juego.players_list">
      <field name="name">Players</field>
      <field name="model">juego.player</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="juego.players_kanban">
      <field name="name">Players</field>
      <field name="model">juego.player</field>
      <field name="arch" type="xml">
        <kanban default_group_by="bunker">
          <field name="id"></field>
          <field name="bunker"></field>
          <templates>
            <t t-name="kanban-box">
              <div t-attf-class="oe_kanban_color_{{kanban_getcolor(record.bunker.raw_value)}} oe_kanban_global_click o_kanban_record_has_image_fill">
                <a type="open">
                  <img style="border-radius: 100px; border: 1px solid #000" class="oe_kanban_image" heigh="100" width="100" t-att-src="kanban_image('juego.player','avatar',record.id.value)" t-att-alt="record.name.value"/>
                </a>
                <div t-attf-class="oe_kanban_content">
                  <h4 style="margin-left: 10px;">
                    <a type="edit">
                      <field name="username"></field>
                    </a>
                  </h4>
                  <ul>
                    <li>Name: <field name="name"></field>
                    </li>
                    <li>Bunker: <field name="bunker"></field>
                    </li>
                  </ul>
                </div>
              </div>
            </t>
          </templates>
        </kanban>
      </field>
    </record>


    <record model="ir.ui.view" id="juego.players_form">
      <field name="name">Players</field>
      <field name="model">juego.player</field>
      <field name="arch" type="xml">
        <form>
          <header>
            <field name="state" widget="statusbar"></field>
            <button attrs="{'invisible':[('state','=','2')]}" domain="[('state','=',state)]" name="find_bunker" type="object" string="Find Bunker" class="oe_highlight"/>
            <button attrs="{'invisible':[('state','=','1')]}" domain="[('state','=',state)]" name="leave_bunker" type="object" string="Leave Bunker" class="oe_highlight"/>
            <button attrs="{'invisible':[('state','=','1')]}" domain="[('state','=',state)]" name="recruit_npc" type="object" string="Recruit NPC" class="oe_highlight"/>
          </header>
          <sheet>
            <div class="oe_button_box">
              <button name="gen_random_avatar" class="oe_stat_button" type="object" icon="fa-random">
                <span class="o_stat_text">Random avatar</span>
              </button>
            </div>
            <field name="avatar" widget="image"/>
            <group>
              <separator string="Account Info"></separator>
              <field name="username"/>
              <field name="password"/>
              <field name="register_date"/>
            </group>
            <group>
              <separator string="Personal Data"></separator>
              <field name="name"/>
              <field name="birth_year"/>
            </group>
            <group>
              <separator string="Game Data"></separator>
              <field name="bunker"/>
              <field name="level"/>
            </group>
            <notebook>
              <page string="Bunker">
                <field name="bunker">
                  <tree>
                    <field name="name"/>
                  </tree>
                </field>
              </page>
              <page string="NPCs">
                <field name="npcs">
                  <tree>
                    <field name="name"/>
                  </tree>
                </field>
              </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>

    <!--Bunkers-->

    <record model="ir.ui.view" id="juego.bunkers_list">
      <field name="name">Bunkers</field>
      <field name="model">juego.bunker</field>
      <field name="arch" type="xml">
        <tree decoration-danger="food&lt;10 or water&lt;10" decoration-warning="food&lt;25 or water&lt;25">
          <field name="bImage" widget="image" class="imagen_bunker_lista"/>
          <field name="name"/>
          <field name="population"/>
          <field name="food"/>
          <field name="water"/>
          <field name="bottle_caps"/>

        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="juego.bunkers_kanban">
      <field name="name">Bunkers</field>
      <field name="model">juego.bunker</field>
      <field name="arch" type="xml">
        <kanban>
          <field name="id"></field>
          <field name="name"></field>
          <templates>
            <t t-extend="ImportView.import_button">
              <t t-jquery="button.o_button_import" t-operation="after">
                <button name="button_import" type="button" t-if='widget.bunker == "juego.bunker"' class="btn btn-sm btn-default o_import_button o_import_import">Create random bunker</button>
              </t>
            </t>
            <t t-name="kanban-box">
              <div t-attf-class="oe_kanban_color_{{kanban_getcolor(record.name.raw_value)}} oe_kanban_global_click o_kanban_record_has_image_fill">
                <a type="open">
                  <img style="border-radius: 100px; border: 1px solid #000" class="oe_kanban_image bunkerIMG" heigh="100" width="100" t-att-src="kanban_image('juego.bunker','bImage',record.id.value)" t-att-alt="record.name.value"/>
                </a>
                <div t-attf-class="oe_kanban_content">
                  <h4 style="margin-left: 10px;">
                    <a type="open">Bunker 
                      <field name="name"></field>
                    </a>
                  </h4>
                  <ul>
                    <li>Population: <field name="population"></field>
                    </li>
                    <li>Food: <field name="food"></field>
                    </li>
                    <li>Water: <field name="water"></field>
                    </li>
                    <li>Total bottle caps: <field name="bottle_caps"></field>
                    </li>
                  </ul>
                </div>
              </div>
            </t>
          </templates>
        </kanban>
      </field>
    </record>


    <record model="ir.ui.view" id="juego.bunkers_form">
      <field name="name">Bunkers</field>
      <field name="model">juego.bunker</field>
      <field name="arch" type="xml">
        <form>
          <header>
            <button name="create_random_bunker" type="object" string="Create random bunker" class="oe_highlight"/>
          </header>
          <sheet>
            <field name="bImage" widget="image"/>
            <group>
              <separator string="Bunker info"></separator>
              <field name="name"/>
              <field name="players"/>
              <field name="npcs" mode="kanban">
                <kanban default_group_by="bunker" create="false">                  <!--banner_route="/juego/banner"-->
                  <field name="id"></field>
                  <field name="bunker"></field>
                  <templates>
                    <t t-name="kanban-box">
                      <div t-attf-class="oe_kanban_card o_kanban_record_has_image_fill ">
                        <div class="o_kanban_image_fill_left o_kanban_image_full d-none d-md-block" t-attf-style="background-image:url('#{kanban_image('juego.npc', 'avatar', record.id.value, placeholder)}')">
                        </div>
                        <div class="oe_kanban_details d-flex flex-column">
                          <a type="open">
                            <h4 class="o_kanban_record_title oe_partner_heading">
                              <field name="name"/>
                            </h4>
                          </a>
                          <ul>
                            <li>Name: <field name="name"/>
                            </li>
                            <li>Hunger: <field name="hunger"/>
                            </li>
                            <li>Thirst: <field name="thirst"/>
                            </li>
                            <li>Bottle caps: <field name="bottle_caps"/>
                            </li>
                            <li>Player: <field name="player"/>
                            </li>

                          </ul>
                        </div>
                      </div>
                    </t>
                  </templates>
                </kanban>
              </field>
            </group>
            <group>
              <separator string="Bunker Stats"></separator>
              <field name="population"/>
              <field name="max_population"/>
              <field name="water_deposits"/>
              <field name="food_pantries"/>
              <field name="bottle_caps"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>



    <!--NPCs-->
    <record model="ir.ui.view" id="juego.npcs_list">
      <field name="name">NPCs</field>
      <field name="model">juego.npc</field>
      <field name="arch" type="xml">
        <tree decoration-danger="thirst&lt;10 or hunger&lt;10" decoration-warning="thirst&lt;20 or hunger&lt;20" create="false">          <!--create="false" para quitar el boton crear en los npcs-->
          <field name="avatar" widget="image" class="imagen_npc_lista"/>
          <field name="name"/>
          <field name="hunger"/>
          <field name="thirst"/>
          <field name="bottle_caps"/>
          <field name="player"/>
          <field name="bunker"/>
          <field name="level"/>
        </tree>
      </field>
    </record>


    <record model="ir.ui.view" id="juego.npcs_kanban">
      <field name="name">NPCs</field>
      <field name="model">juego.npc</field>
      <field name="arch" type="xml">
        <!--create="false" para quitar el boton crear en los npcs-->
        <kanban default_group_by="bunker" create="false">          <!--banner_route="/juego/banner"-->
          <field name="id"></field>
          <field name="bunker"></field>
          <templates>
            <t t-name="kanban-box">
              <div t-attf-class="oe_kanban_color_{{kanban_getcolor(record.bunker.raw_value)}} oe_kanban_global_click o_kanban_record_has_image_fill">
                <a type="open">
                  <img style="border-radius: 4px; border: 1px solid #000" class="oe_kanban_image" heigh="100" width="100" t-att-src="kanban_image('juego.npc','avatar',record.id.value)" t-att-alt="record.name.value"/>
                </a>
                <div t-attf-class="oe_kanban_content">
                  <h4 style="margin-left: 10px;">
                    <a type="open">
                      <field name="name"></field>
                    </a>
                  </h4>
                  <ul>
                    <li>Bunker: <field name="bunker"></field>
                    </li>
                    <li>Boss: <field name="player"></field>
                    </li>
                    <li>Bottle caps: <field name="bottle_caps"></field>
                    </li>
                  </ul>
                </div>
              </div>
            </t>
          </templates>
        </kanban>


      </field>
    </record>


    <record model="ir.ui.view" id="juego.npcs_form">
      <field name="name">NPCs</field>
      <field name="model">juego.npc</field>
      <field name="arch" type="xml">
        <form create="false" edit="true" action="false">
          <header>
          </header>
          <sheet>
            <field name="avatar" widget="image"/>
            <group>
              <separator string="Personal Data"></separator>
              <field name="name"/>
              <field name="player"/>
              <field name="bunker"/>
            </group>
            <group>
              <separator string="Stats"></separator>
              <field name="level"/>
              <field name="hunger"/>
              <field name="thirst"/>
              <field name="bottle_caps"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>


    <!-- actions opening views on models -->
    <!--
    <record model="ir.actions.act_window" id="juego.action_window">
      <field name="name">juego window</field>
      <field name="res_model">juego.juego</field>
      <field name="view_mode">tree,form</field>
    </record>
-->

    <!-- server action to the one above -->


    <record model="ir.actions.act_window" id="juego.action_players_window">
      <field name="name">Players</field>
      <field name="res_model">juego.player</field>
      <field name="view_mode">kanban,tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="juego.action_bunkers_window">
      <field name="name">Bunkers</field>
      <field name="res_model">juego.bunker</field>
      <field name="view_mode">kanban,tree,form</field>

    </record>

    <record model="ir.actions.act_window" id="juego.action_npcs_window">
      <field name="name">NPCs</field>
      <field name="res_model">juego.npc</field>
      <field name="view_mode">kanban,tree,form</field>
    </record>

    <!--
    <record model="ir.actions.server" id="juego.action_server">
      <field name="name">juego server</field>
      <field name="model_id" ref="model_juego_juego"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": model._name,
        }
      </field>
    </record>
-->

    <!-- Top menu item -->

    <menuitem name="Juego" id="juego.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Juego" id="juego.menu_1" parent="juego.menu_root"/>

    <!-- actions -->

    <menuitem name="Players" id="juego.menu_players_list" parent="juego.menu_1" action="juego.action_players_window"/>
    <menuitem name="Bunkers" id="juego.menu_bunkers_list" parent="juego.menu_1" action="juego.action_bunkers_window"/>
    <menuitem name="NPCS" id="juego.menu_npcs_list" parent="juego.menu_1" action="juego.action_npcs_window"/>

  </data>
</odoo>