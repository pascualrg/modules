<odoo>
  <data>
    <!-- explicit list view definition -->

    <!--Jugadores-->
    <record model="ir.ui.view" id="juego.players_list">
      <field name="name">Players</field>
      <field name="model">juego.player</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="juego.players_kanban">
      <field name="name">Players</field>
      <field name="model">juego.player</field>
      <field name="arch" type="xml">
        <kanban default_group_by="bunker">
          <field name="id"></field>
          <field name="bunker"></field>
          <templates>
            <t t-name="kanban-box">
              <div t-attf-class="oe_kanban_color_{{kanban_getcolor(record.bunker.raw_value)}} oe_kanban_global_click o_kanban_record_has_image_fill">
                <a type="open">
                  <img style="border-radius: 4px; border: 1px solid #000" class="oe_kanban_image" heigh="50" width="50" t-att-src="kanban_image('juego.player','avatar',record.id.value)" t-att-alt="record.name.value"/>
                </a>
                <div t-attf-class="oe_kanban_content">
                  <h4 style="margin-left: 10px;">
                    <a type="edit">
                      <field name="name"></field>
                    </a>
                  </h4>
                  <ul>
                    <li>Bunker: <field name="bunker"></field>
                    </li>
                  </ul>
                </div>
              </div>
            </t>
          </templates>
        </kanban>
      </field>
    </record>


    <record model="ir.ui.view" id="juego.players_form">
      <field name="name">Players</field>
      <field name="model">juego.player</field>
      <field name="arch" type="xml">
        <form>
          <header>
          </header>
          <sheet>
            <field name="avatar" widget="image"/>
            <group>
              <separator string="Personal Data"></separator>
              <field name="name"/>
              <field name="password"/>
              <field name="birth_year"/>
            </group>
            <group>
              <separator string="Game Data"></separator>
              <field name="bunker"/>
              <field name="register_date"/>
              <field name="level"/>
            </group>
            <notebook>
              <page string="Bunkers">
                <field name="bunker">
                  <tree>
                    <field name="name"/>
                  </tree>
                </field>
              </page>
              <page string="NPCs">
                <field name="npcs">
                  <tree>
                    <field name="name"/>
                  </tree>
                </field>
              </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>

    <!--Bunkers-->

    <record model="ir.ui.view" id="juego.bunkers_list">
      <field name="name">Bunkers</field>
      <field name="model">juego.bunker</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
        </tree>
      </field>
    </record>

  <!--NPCs-->
    <record model="ir.ui.view" id="juego.npcs_list">
      <field name="name">NPCs</field>
      <field name="model">juego.npc</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->
<!--
    <record model="ir.actions.act_window" id="juego.action_window">
      <field name="name">juego window</field>
      <field name="res_model">juego.juego</field>
